<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbars="vertical"
    tools:context="com.advanchip.mobile_controlledlighting.EditSwitchActivity" >

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="4"
        android:visibility="visible" >

        <TextView
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal"
            android:layout_row="0"
            android:paddingBottom="20dp"
            android:text="Existing Switches"
            android:textSize="20dip"
            android:typeface="serif" />

        <TextView
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="1"
            android:text="parking switch"
            android:textSize="20dip"
            android:typeface="serif" />

        <Switch
            android:id="@+id/mySwitch"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_marginLeft="15dp"
            android:layout_row="1"
            android:switchMinWidth="50dp" 
            
            />
		<ImageButton
            android:id="@+id/edit_icon"
            android:layout_column="2"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_height="25dp"
            android:layout_width="25dp"
            android:layout_row="1" />
		<ImageButton
            android:id="@+id/delete_icon"
            android:layout_column="3"
            android:src="@android:drawable/ic_delete"
            android:layout_height="25dp"
            android:layout_width="25dp" 
            android:layout_row="1"/>
		
        <TextView
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="center_horizontal"
            android:layout_row="2"
            android:text="kitchen switch"
            android:textSize="20dip"
            android:typeface="serif" />

        <Switch
            android:id="@+id/mySwitch1"
            android:switchMinWidth="50dp" 
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_marginLeft="15dp"
            android:layout_row="2" />

         <ImageButton
            android:id="@+id/edit_icon1"
            android:layout_column="2"
            android:layout_row="2"
            android:src="@android:drawable/ic_menu_edit" 
            android:layout_height="25dp"
            android:layout_width="25dp"/>
         
		<ImageButton
            android:id="@+id/delete_icon1"
            android:layout_column="3"
            android:layout_row="2"
            android:src="@android:drawable/ic_delete"
            android:layout_height="25dp"
            android:layout_width="25dp" />

        <TextView
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_row="3"
            android:text="basement"
            android:textSize="20dip"
            android:typeface="serif" />

        <Switch
            android:id="@+id/mySwitch2"
            android:layout_column="1"
            android:switchMinWidth="50dp" 
            android:layout_gravity="left|top"
            android:layout_marginLeft="15dp"
            android:layout_row="3" />

        <ImageButton
            android:id="@+id/edit_icon2"
            android:layout_column="2"
            android:layout_row="3"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_height="25dp"
            android:layout_width="25dp" />
		<ImageButton
            android:id="@+id/delete_icon2"
            android:layout_column="3"
            android:layout_row="3"
            android:src="@android:drawable/ic_delete" 
            android:layout_height="25dp"
            android:layout_width="25dp"/>

    </GridLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gridLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:text="Add Switch" />

</RelativeLayout>