<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.advanchip.mobile_controlledlighting.LoginActivity"
    android:background="#011f4b" >

    <!-- Login progress -->

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="380dp" >

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <ImageView 
                android:layout_marginTop="20dp"
                android:id="@+id/logoImage"
	            android:maxWidth="400dp"
                android:layout_width="match_parent"
                android:src="@drawable/logo_advanchip"
                android:layout_height="100sp"
                android:scaleType="fitXY"/>
                
             />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:maxWidth="400dp"
                android:layout_gravity="center_horizontal"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#008bcb"
                android:background="@drawable/rect_text_edit"
                android:layout_marginTop="20sp"
                android:layout_height="30sp"
                android:drawableLeft="@android:drawable/ic_dialog_email"
                android:drawablePadding="5dp"
                android:textStyle="bold"
                
                 
                />

            <EditText
                android:id="@+id/password"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:maxWidth="400dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="30sp"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#008bcb"
                android:textStyle="bold"
                android:background="@drawable/rect_text_edit"
                android:drawableLeft="@android:drawable/ic_lock_lock"
                android:drawablePadding="5dp"
                 />

            <Button
                android:id="@+id/email_sign_in_button"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Log In"
                android:background="@drawable/submit_button_bg"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_width="200sp"
                android:layout_gravity="center_horizontal" />
            
	
	            <TextView
	                android:id="@+id/forgotPasswordView"
	                android:layout_width="match_parent"
	                android:layout_gravity="center"
	                android:gravity="center_horizontal"
	                android:singleLine="true"
	                android:layout_marginTop="16dp"
	                android:layout_height="wrap_content"
	                android:text="Forgot Password?" 
	                android:textColor="#ffffff"
	                android:textSize="18sp"
	                android:clickable="true" />
	            
	            <TextView
	                android:id="@+id/resetPasswordView"
	                android:layout_width="match_parent"
	                android:layout_gravity="center"
	                android:gravity="center_horizontal"
	                android:singleLine="true"
	                android:layout_marginTop="16dp"
	                android:layout_height="wrap_content"
	                android:text="Reset Password?" 
	                android:textColor="#ffffff"
	                android:textSize="18sp"
	                android:clickable="true" />
	            
        </LinearLayout>
        
    </ScrollView>

</LinearLayout>
